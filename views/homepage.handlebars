<!-- Loop over each object in the projects array -->
{{#each events as |event|}}
<link rel = "stylesheet" href=> </link>
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
      
        <a href="/event/{{event.id}}">{{event.name}}</a>
      </h2>
      <p>
        {{date}}   {{event.time}}
      </p>
        <p>
        {{event.location}}
      </p>
      <p>Organized by
        {{user.name}}
        
       
    </div>
    <div class="col-md-7">
      <p>
        {{event.description}}
      </p>
    </div>
  </div>
{{/each}}